<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginIndexActivity"
    android:orientation="vertical"
    android:background="#FBFBFB">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImageLogo_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/knitlogo" />

        <Button
            android:id="@+id/directorImgButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/round_corner_button"
            android:text="Director Login"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/contentLoginButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/directorImgButton"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/round_corner_button"
            android:text="Content Provider Login"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/developerButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/contentLoginButton"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner_button"
            android:text="Developer Login"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>