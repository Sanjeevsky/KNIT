<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DepartmentsActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_id_departments"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_below="@+id/toolbar_id_departments">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/department_id_applied_science"
                android:drawableLeft="@drawable/dropdown"
                android:background="@drawable/round_corner_button"
                android:textColor="#fff"
                android:elevation="10dp"
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:text="Department of applied sciences and humanities"/>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/expandablelayout1_depart"
                android:background="#ffff"
                app:ael_duration="400"
                android:layout_below="@+id/department_id_applied_science"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical"
                android:layout_marginBottom="5dp">
                
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="20dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/applied_textview_id" />

                    </android.support.v7.widget.CardView>
                    
                </ScrollView>

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/department_id_civil_engi"
                android:drawableLeft="@drawable/dropdown"
                android:layout_below="@id/expandablelayout1_depart"
                android:background="@drawable/round_corner_button"
                android:textColor="#fff"
                android:elevation="10dp"
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:text="Department of Civil Engineering"/>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/expandablelayout2_depart"
                android:background="#ffff"
                app:ael_duration="400"
                android:layout_below="@+id/department_id_civil_engi"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical"
                android:layout_marginBottom="5dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="20dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/civil_textview_id" />

                    </android.support.v7.widget.CardView>

                </ScrollView>

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/department_id_electrical_engi"
                android:drawableLeft="@drawable/dropdown"
                android:layout_below="@id/expandablelayout2_depart"
                android:background="@drawable/round_corner_button"
                android:textColor="#fff"
                android:padding="10dp"
                android:elevation="10dp"
                android:layout_marginBottom="5dp"
                android:text="Department of Civil Engineering"/>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/expandablelayout3_depart"
                android:background="#ffff"
                app:ael_duration="400"
                android:layout_below="@+id/department_id_electrical_engi"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical"
                android:layout_marginBottom="5dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="20dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/electrical_textview_id" />

                    </android.support.v7.widget.CardView>

                </ScrollView>

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/department_id_electronics_engi"
                android:drawableLeft="@drawable/dropdown"
                android:layout_below="@id/expandablelayout3_depart"
                android:background="@drawable/round_corner_button"
                android:textColor="#fff"
                android:padding="10dp"
                android:elevation="10dp"
                android:layout_marginBottom="5dp"
                android:text="Department of Electronics Engineering"/>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/expandablelayout4_depart"
                android:background="#ffff"
                app:ael_duration="400"
                android:layout_below="@+id/department_id_electronics_engi"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical"
                android:layout_marginBottom="5dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="20dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/electronics_textview_id" />

                    </android.support.v7.widget.CardView>

                </ScrollView>

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/department_id_mechanical_engi"
                android:drawableLeft="@drawable/dropdown"
                android:layout_below="@id/expandablelayout4_depart"
                android:background="@drawable/round_corner_button"
                android:textColor="#fff"
                android:padding="10dp"
                android:elevation="10dp"
                android:layout_marginBottom="5dp"
                android:text="Department of Mechanical Engineering"/>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/expandablelayout5_depart"
                android:background="#ffff"
                app:ael_duration="400"
                android:layout_below="@+id/department_id_mechanical_engi"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical"
                android:layout_marginBottom="5dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="20dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/mechanical_textview_id" />

                    </android.support.v7.widget.CardView>

                </ScrollView>

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/department_id_computer_engi"
                android:drawableLeft="@drawable/dropdown"
                android:layout_below="@id/expandablelayout5_depart"
                android:background="@drawable/round_corner_button"
                android:textColor="#fff"
                android:padding="10dp"
                android:elevation="10dp"
                android:layout_marginBottom="5dp"
                android:text="Department of Computer Science and Engineering"/>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/expandablelayout6_depart"
                android:background="#ffff"
                app:ael_duration="400"
                android:layout_below="@+id/department_id_computer_engi"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical"
                android:layout_marginBottom="10dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="20dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/computer_textview_id" />
                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:stretchColumns="2"
                                android:divider="?android:attr/dividerHorizontal"
                                android:layout_weight="2">
                                <TableRow
                                    android:divider="?android:attr/dividerVertical">
                                    <TextView
                                        android:text="Unix Lab"/>
                                    <TextView
                                        android:text="Multimedia Lab"
                                        />
                                </TableRow>
                                <TableRow
                                    android:divider="?android:attr/dividerVertical">
                                    <TextView
                                        android:text="RDBMS Lab"/>
                                    <TextView
                                        android:text="Internet and Networking Lab" />
                                </TableRow>
                                <TableRow
                                    android:divider="?android:attr/dividerVertical">
                                    <TextView
                                        android:text="Graphics Lab"
                                        android:paddingRight="20dp"/>
                                    <TextView
                                        android:text="Software Engineering Lab"/>
                                </TableRow>
                            </TableLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/computer_textview_id2"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </ScrollView>

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/department_id_workshop"
                android:drawableLeft="@drawable/dropdown"
                android:layout_below="@id/expandablelayout6_depart"
                android:background="@drawable/round_corner_button"
                android:textColor="#fff"
                android:padding="10dp"
                android:elevation="10dp"
                android:layout_marginBottom="5dp"
                android:text="Workshop"/>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/expandablelayout7_depart"
                android:background="#ffff"
                app:ael_duration="400"
                android:layout_below="@+id/department_id_workshop"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical"
                android:layout_marginBottom="5dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="20dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/workshop_textview_id"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="#ff0000"
                                android:layout_weight="4"
                                android:text="List of Important Machines and Equipments"
                                android:id="@+id/workshop_textview_id2"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </ScrollView>

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/department_id_library"
                android:drawableLeft="@drawable/dropdown"
                android:layout_below="@id/expandablelayout7_depart"
                android:background="@drawable/round_corner_button"
                android:textColor="#fff"
                android:padding="10dp"
                android:elevation="10dp"
                android:layout_marginBottom="5dp"
                android:text="Central Library"/>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/expandablelayout8_depart"
                android:background="#ffff"
                app:ael_duration="400"
                android:layout_below="@+id/department_id_library"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical"
                android:layout_marginBottom="5dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="20dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/library_textview_id" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="#ff0000"
                                android:layout_weight="4"
                                android:text="Library at a Glance"
                                android:id="@+id/library_textview_id2"/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </ScrollView>

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>