<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DevelopersActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_id_dev"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/toolbar_id_dev">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/developers_card1"
                android:layout_below="@id/toolbar_id_dev"
                app:cardCornerRadius="8dp"
                android:layout_margin="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_height="200dp"
                        android:src="@drawable/dev1"
                        android:id="@+id/image1"
                        />
                    <TextView
                        android:layout_below="@id/image1"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                        android:text="Sanjeev Kumar \n Infromation Technology \n III year"
                        android:textAlignment="center"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/developers_card2"
                android:layout_below="@id/developers_card1"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_height="200dp"
                        android:src="@drawable/dev2"
                        android:id="@+id/image2"
                        android:cropToPadding="true"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:layout_below="@id/image2"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                        android:text="Ashish Kumar \n Computer Science Engineering \n III year"
                        android:textAlignment="center"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>